<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (products.length > 0) { %>
                <ul>
                    <% products.forEach( p => { %>
                        <li> 
                            <p><%= p.productData.title %>  (<%= p.qty%>)</p>
                            <form action="/cart-manage-item" method="POST">
                                <input type="hidden" name="productIdToManageFromCart" value="<%= p.productData.id %>">
                                <input type="hidden" name="productPriceToManageFromCart" value="<%= p.productData.price %>">
                                <input class="form-control" type="number" min='-<%= p.qty %>' max=+100 step=1 name="productQtyToManageFromCart">
                                <button class="btn" type="submit">UPDATE</button>
                            </form>
                        </li> 
                    <% }) %>
                </ul>
            <% } else { %>
                <h1>No Products in Cart yet !</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>